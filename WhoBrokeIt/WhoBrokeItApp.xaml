<?xml version="1.0" encoding="UTF-8"?>
<Application 
		xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="WhoBrokeIt.UI.WhoBrokeItApp">
	<Application.Resources>
		<ResourceDictionary>
			<Color x:Key="VisualStudioColor">#68217A</Color>
			<Color x:Key="VisualStudioBackgroundColor">#EEEEF2</Color>


            <Style x:Key="AppPage" TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{StaticResource VisualStudioBackgroundColor}" />
            </Style>

	      <OnPlatform x:TypeArguments="Color" Android="{StaticResource VisualStudioColor}" x:Key="BrandedButtonBackgroundColor" />
	      <OnPlatform x:TypeArguments="Color" Android="White" iOS="{StaticResource VisualStudioColor}" x:Key="BrandedButtonTextColor" />

	      
	      <Style x:Key="BrandedButton" TargetType="Button">
	        <Setter Property="BackgroundColor" Value="{StaticResource BrandedButtonBackgroundColor}"></Setter>
	        <Setter Property="TextColor" Value="{StaticResource BrandedButtonTextColor}"></Setter>
	      </Style>
		</ResourceDictionary>
	</Application.Resources>
</Application>
