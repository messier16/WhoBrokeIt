<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:controls="clr-namespace:WhoBrokeIt.UI.Controls"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WhoBrokeIt.UI.Controls.ListEmptyView">
    <ContentView.Content>
        <controls:CardView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Image x:Name="EmptyImage"></Image>
                <Label x:Name="EmptyTextLabel" HorizontalTextAlignment="Center" Grid.Row="1"></Label>
            </Grid>
        </controls:CardView>
    </ContentView.Content>
</ContentView>
